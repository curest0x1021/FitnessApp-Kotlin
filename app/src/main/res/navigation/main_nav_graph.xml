<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.liverowing.android.dashboard.DashboardFragment">
        <action
            android:id="@+id/deviceScanAction"
            app:destination="@id/deviceScanFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/workoutBrowserAction"
            app:destination="@id/workoutBrowserFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">
            <argument
                android:name="category"
                android:defaultValue="1" />
        </action>
        <action
            android:id="@+id/workoutBrowserDetailAction"
            app:destination="@id/workoutBrowserDetail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/calculatorsAction"
            app:destination="@id/calculatorsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/workoutHistoryAction"
            app:destination="@id/workoutHistoryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_enter_anim" />
        <action
            android:id="@+id/raceFragmentAction"
            app:destination="@id/raceFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutBrowserFragment"
        android:name="com.liverowing.android.workoutbrowser.WorkoutBrowserFragment"
        android:label="Workout browser">
        <argument
            android:name="category"
            android:defaultValue="1"
            app:argType="integer" />
        <argument
            android:name="tags"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="types"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />
        <argument
            android:name="filter"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/workoutBrowserDetailAction"
            app:destination="@id/workoutBrowserDetail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/calculatorsFragment"
        android:name="com.liverowing.android.calculators.CalculatorsFragment"
        android:label="Calculators"
        tools:layout="@layout/fragment_calculators" />
    <fragment
        android:id="@+id/deviceScanFragment"
        android:name="com.liverowing.android.devicescan.DeviceScanFragment"
        android:label="Device scan"
        tools:layout="@layout/fragment_device_scan" />
    <fragment
        android:id="@+id/workoutBrowserDetail"
        android:name="com.liverowing.android.workoutbrowser.detail.WorkoutBrowserDetailFragment"
        tools:layout="@layout/fragment_workout_browser_detail">
        <argument
            android:name="workoutTypeId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="workoutType"
            android:defaultValue="@null"
            app:argType="com.liverowing.android.model.parse.WorkoutType"
            app:nullable="true" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="liverowing.com/workout/browser/{workoutTypeId}" />
        <action
            android:id="@+id/raceFragmentAction"
            app:destination="@id/raceFragment" />
        <action
            android:id="@+id/workoutBrowserAction"
            app:destination="@id/workoutBrowserFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutHistoryFragment"
        android:name="com.liverowing.android.workouthistory.WorkoutHistoryFragment"
        android:label="Workout history"
        tools:layout="@layout/fragment_workout_history">
        <action
            android:id="@+id/workoutHistoryDetailAction"
            app:destination="@id/workoutHistoryDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/workoutHistoryDetailFragment"
        android:name="com.liverowing.android.workouthistory.detail.WorkoutHistoryDetailFragment"
        tools:layout="@layout/fragment_workout_history_detail" />
    <fragment
        android:id="@+id/raceFragment"
        android:name="com.liverowing.android.race.RaceFragment"
        tools:layout="@layout/fragment_race">
        <argument
            android:name="workoutTypeId"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="workoutType"
            android:defaultValue="@null"
            app:argType="com.liverowing.android.model.parse.WorkoutType"
            app:nullable="true" />
        <action
            android:id="@+id/deviceScanAction"
            app:destination="@id/deviceScanFragment" />
    </fragment>
</navigation>