<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundOverlayColor"
    android:paddingTop="@dimen/activity_vertical_margin_small"
    android:paddingBottom="@dimen/activity_vertical_margin_small">

    <LinearLayout
        android:id="@+id/bottom_sheet_view_details"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:tint="@color/textColorDark"
            android:src="@drawable/ic_view"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="View Details"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_send_friend"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:tint="@color/textColorDark"
            android:src="@drawable/ic_send"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Send Workout to Friend"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"/>

        <com.liverowing.android.views.TintableImageView
            android:id="@+id/bottom_sheet_send_friend_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_check"
            app:tintColorStateList="@color/bottom_sheet_tint_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_share_social"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:tint="@color/textColorDark"
            android:src="@drawable/ic_share"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Share details to Social"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"/>

        <com.liverowing.android.views.TintableImageView
            android:id="@+id/bottom_sheet_share_social_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_check"
            app:tintColorStateList="@color/bottom_sheet_tint_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_share_concept2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_c2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Share to Concept2 Logbook"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"/>

        <com.liverowing.android.views.TintableImageView
            android:id="@+id/bottom_sheet_share_concept2_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_check"
            app:tintColorStateList="@color/bottom_sheet_tint_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_send_strava"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_strava"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Send to Strava"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"/>

        <com.liverowing.android.views.TintableImageView
            android:id="@+id/bottom_sheet_send_strava_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_check"
            app:tintColorStateList="@color/bottom_sheet_tint_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_sheet_delete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin_small"
        android:paddingBottom="@dimen/activity_vertical_margin_small">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:tint="@color/textColorDark"
            android:src="@drawable/ic_delete"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Delete Workout"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>