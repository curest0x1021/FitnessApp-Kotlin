<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.workouttype.UserStatsRowFragment">


    <ImageView
        android:id="@+id/f_user_stats_row_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_user_stats_row_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="Username"
        app:layout_constraintBottom_toBottomOf="@+id/f_user_stats_row_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/f_user_stats_row_image"
        app:layout_constraintTop_toTopOf="@+id/f_user_stats_row_image" />

    <TextView
        android:id="@+id/f_user_stats_row_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:text="Value"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/f_user_stats_row_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/f_user_stats_row_username"
        app:layout_constraintTop_toTopOf="@+id/f_user_stats_row_image" />
</android.support.constraint.ConstraintLayout>