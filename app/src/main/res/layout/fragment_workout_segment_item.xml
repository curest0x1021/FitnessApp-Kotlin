<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/f_workout_segment_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_item_placeholder"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_workout_segment_title"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:singleLine="true"
        android:text="TextView"
        android:textAppearance="@style/TextAppearanceCustomBody1"
        android:textColor="@color/text_color1"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/f_workout_segment_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/f_workout_segment_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearanceCustomBody4"
        android:textColor="@color/text_color6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/f_workout_segment_image"
        app:layout_constraintTop_toBottomOf="@+id/f_workout_segment_title" />

    <TextView
        android:id="@+id/f_workout_segment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="@style/TextAppearanceCustomBody4"
        android:textColor="@color/text_color6"
        app:layout_constraintTop_toBottomOf="@+id/f_workout_segment_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>