<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_detail_collapsing_toolbar"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    app:contentScrim="?attr/colorPrimary"
    app:titleEnabled="true"
    app:expandedTitleMarginBottom="40dp"
    app:expandedTitleMarginStart="72dp"
    app:expandedTitleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
    tools:showIn="@layout/fragment_workout_browser_detail">

    <ImageView
        android:id="@+id/workout_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:foreground="@drawable/black_gradient"
        app:layout_collapseMode="parallax" />

    <ImageView
        android:id="@+id/workout_detail_createdby_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:src="@mipmap/ic_launcher"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.3" />

    <TextView
        android:id="@+id/workout_detail_createdby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="BY | LiveRowing"
        android:textColor="#ffffff"
        android:textAppearance="@style/TextAppearanceCustomCaption"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.2" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/workout_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStartWithNavigation="0dp"
        app:title="Hank"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
</com.google.android.material.appbar.CollapsingToolbarLayout>