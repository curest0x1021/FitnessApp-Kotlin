<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:maxHeight="424dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_choose_featured_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Featured Workouts"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAppearance="@style/TextAppearanceCustomTitle"
        android:textColor="@color/text_color1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_choose_featured_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:paddingBottom="@dimen/activity_vertical_margin_medium"/>

    <View
        android:id="@+id/dialog_choose_featured_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:id="@+id/dialog_choose_featured_buttons"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical|right">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_choose_featured_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:text="Cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:padding="@dimen/activity_horizontal_margin_medium"
            android:layout_marginEnd="@dimen/activity_horizontal_margin_medium"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialog_choose_featured_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:text="Apply"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:padding="@dimen/activity_horizontal_margin_medium"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

</LinearLayout>