<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/birthday_description"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold"
            android:textColor="@color/black_overlay"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_4"/>

        <EditText
            android:id="@+id/a_signup_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:editable="false"
            android:clickable="true"
            android:textColor="@color/black_overlay"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthday"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/black_overlay"
            android:layout_margin="@dimen/margin_4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/password_confirm_description"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_4"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16">

            <ImageButton
                android:id="@+id/btn_profile_picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_plus"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_8">

                <TextView
                    android:id="@+id/txt_signup_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="{username}"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/black_overlay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/cant_wait"
                    android:textSize="@dimen/text_size_10"
                    android:textColor="@color/black_overlay"/>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.constraint.ConstraintLayout>