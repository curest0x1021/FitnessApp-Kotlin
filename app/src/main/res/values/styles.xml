<resources>


    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>

        <item name="android:windowTranslucentStatus">true</item>
        <!--
                <item name="colorControlNormal">@color/textp</item>
                <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        -->
        <item name="android:toolbarStyle">@style/AppTheme.Widget.Toolbar</item>
        <item name="toolbarStyle">@style/AppTheme.Widget.Toolbar</item>

        <!--<item name="android:fontFamily">@font/lato</item>-->
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.Widget" />

    <!-- ActionBar/Toolbar -->
    <style name="AppTheme.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorPrimaryInverse">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Widget.Toolbar.Popup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <!-- TabLayout inside a Toolbar -->
    <style name="AppTheme.Widget.Toolbar.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#d15b5b</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabTextAppearance">@style/AppTheme.Widget.Toolbar.TabLayout.TabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <!-- TabLayout outside Toolbar -->
    <style name="AppTheme.Widget.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#d15b5b</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabMinWidth">0dp</item>
        <item name="tabTextAppearance">@style/AppTheme.Widget.TabLayout.TabTextAppearance</item>
        <item name="tabSelectedTextColor">#787878</item>
        <item name="android:background">@drawable/tab_indicator_bottom_border</item>
    </style>

    <style name="AppTheme.Widget.TabLayout.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#787878</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.Widget.Toolbar.TabLayout.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#a2bbc0</item>
        <item name="textAllCaps">true</item>
    </style>



    <style name="AppTheme.Widget.Button" parent="Base.Widget.AppCompat.Button.Colored"/>

    <style name="AppTheme.Widget.Button.White">
        <item name="android:backgroundTint">#ffffffff</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Widget.Button.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Title.Small" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Title.Main" parent="AppTheme.TextAppearance.AppCompat.Title.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Title.Description.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Title.Description.Medium" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>

    <!--Dialog animation theme-->
    <style name="DialogAnimationEnterExit" >
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    
    <style name="FullScreenDialog" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    
    <style name="TextAppearanceCustomBody1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearanceCustomBody2">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearanceCustomBody3">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearanceCustomTitle1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearanceCustomTitle2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearanceCustomSection">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="TextAppearanceCustomCard1">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text_color1</item>
    </style>

    <style name="TextAppearanceCustomCard2">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearanceCustomCardName">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/text_color2</item>
    </style>

    <style name="TextAppearanceCustomItemLabel">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceCustomTitle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>


</resources>
