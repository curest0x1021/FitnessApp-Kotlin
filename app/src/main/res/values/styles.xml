<resources>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>

        <item name="toolbarStyle">@style/AppTheme.Widget.Toolbar</item>
        <item name="bottomSheetDialogTheme">@style/LRBottomSheetDialogTheme</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.LoginRegister"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="AppTheme.Widget" />

    <!-- ActionBar/Toolbar -->
    <style name="AppTheme.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">#ffffff</item>
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
    </style>

    <style name="AppTheme.Widget.Toolbar.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Widget.Toolbar.Spinner">
        <item name="android:background">@null</item>
        <item name="android:spinnerItemStyle">@style/AppTheme.Widget.Toolbar.Spinner.Item</item>
    </style>

    <style name="AppTheme.Widget.Toolbar.Spinner.Item">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down_white</item>
    </style>


    <style name="AppTheme.Widget.Button" parent="Base.Widget.AppCompat.Button.Colored"/>

    <style name="AppTheme.Widget.Button.White">
        <item name="android:backgroundTint">#ffffffff</item>
    </style>

    <style name="AppTheme.Widget.Button.Facebook">
        <item name="android:backgroundTint">#3b5998</item>
    </style>

    <!-- TabLayout inside a Toolbar -->
    <style name="LRToolbarTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#d15b5b</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/LRToolbar.TabLayout.TabTextAppearance</item>
        <item name="tabSelectedTextColor">#ffffff</item>
    </style>

    <style name="LRToolbar.TabLayout.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#a2bbc0</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="LRBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/LRBottomSheetStyle</item>
    </style>

    <style name="LRBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="BottomSheetDialogTitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LRTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuickWorkoutType">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
