<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#ffffff"
                android:dashGap="5dp"
                android:dashWidth="5dp" />
        </shape>
    </item>

    <item
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#ffffff"
                android:dashGap="5dp"
                android:dashWidth="5dp" />
        </shape>
    </item>
</layer-list>